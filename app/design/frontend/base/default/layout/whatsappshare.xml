<?xml version="1.0"?>
<!-- 
/**
 * Magento Whatsappshare extension
 *
 * @category   Magecomp
 * @package    Magecomp_Whatsappshare
 * @author     Magecomp
 */
-->
<layout version="0.1.0">
	<catalog_category_view translate="label">
		<reference name="head">
			<action method="addCss"><stylesheet>whatsappshare/css/whatsappshare.css</stylesheet></action>
		</reference>
	 </catalog_category_view>
	 
	<catalog_product_view translate="label">
		<reference name="head">
			<action method="addCss"><stylesheet>whatsappshare/css/whatsappshare.css</stylesheet></action>
		</reference>
		<reference name="product.info.addtocart">
			<block type="whatsappshare/whatsappshare" name="whatsapp" template="whatsappshare/whatsappshare.phtml" />
		</reference>
    </catalog_product_view>	
</layout> 